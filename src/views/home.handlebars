
<h1>Product Manager - Home handlebars</h1>
    <div class="border border-primary">
        <div class ="col">
        <div class="border border-primary d-flex flex-wrap">
            <h3>Products</h3>
            {{#each showProducts}}
            
            <div class="card" style="width: 12rem height:80%">
            {{!-- <img class="card-img-top" src="" alt="Card image cap"> --}}
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">Description: {{this.description}}</p>
                <p class="card-text">Price: {{this.price}}</p>
                <p class="card-text">Thumbnail: {{this.thumbnail}}</p>
                <p class="card-text">Code: {{this.code}}</p>
                <p class="card-text">Stock: {{this.stock}}</p>
                <p class="card-text">Status: {{this.status}}</p>
                <p class="card-text">Category: {{this.category}}</p>
                <p class="card-text">ID: {{this.id}}</p>
                <a class="btn btn-primary" {{!-- data-product-id="{{this.id}}" --}} onclick="deleteProduct('{{this.id}}')" id="click">Delete</a> {{!-- que cada boton delete est√© asignado al ID del producto --}}
            </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="border border-primary">
        <h3>Add Product</h3>
        <form class="row g-4" class="border">
            <div class="col-md-3">
                <label  class="form-label">Title</label>
                <input type="text" class="form-control" id="title">
            </div>
            <div class="col-md-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="description">
            </div>
            <div class="col-3">
                <label  class="form-label">Price</label>
                <input type="number" class="form-control" id="price">
            </div>
            <div class="col-3">
                <label class="form-label">Thumbnail</label>
                <input type="text" class="form-control" id="thumbnail">
            </div>
            <div class="col-md-3">
                <label class="form-label">Code</label>
                <input type="text" class="form-control" id="code">
            </div>
            <div class="col-md-3">
                <label for="inputState" class="form-label">Status</label>
                <select id="status" class="form-select">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="inputState" class="form-label">Status</label>
                <select id="Status" class="form-select">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Category</label>
                <input type="text" class="form-control" id="category">
            </div>
            <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>    
    <div class="border border-primary">
    <form>
        <h3>Delete Product</h3>
        <div class="col-md-3">
            <label  class="form-label">ID to Delete</label>
            <input type="text" class="form-control" id="idToDelete">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
    </form>
    </div>

